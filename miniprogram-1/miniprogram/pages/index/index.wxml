<!--index.wxml-->
<view class="container">

  <view class="title">涓璧HAPPY</view>

  <view class="top_tip"></view>

  <view class="userinfo">
    <block wx:if="{{!hasUserInfo}}">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 峰澶村电О </button>
      <button wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 峰澶村电О </button>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
</view>
