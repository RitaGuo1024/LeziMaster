<!--pages/joinMatch/joinMatch.wxml-->
<view class="page-body">
  <view class="page-section">
    <view class="page-section-title">比赛Id</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" bindinput="bindKeyInput" placeholder="这是一个输入框"/>
      </view>
    </view>
  </view>
  <view class="btn-area">
    <button type="default" bindtap="sendMatchId">Join</button>
  </view>
  <text selectable="true">{{ matchInfo ? matchInfo : 'matchInfo将展示在这里' }}</text>
</view>
